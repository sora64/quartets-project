<div class="grid-container fluid">
  <div class="grid-y grid-padding-y grid-margin-y align-center text-center">
    <section class="cell small-12 flex-container flex-dir-column large-flex-dir-row">
      <div class="callout flex-child-auto media-object align-center image-container">
        <div class="thumbnail holder">
          <img
            src="/images/process_images/{{pic.filename}}"
            alt="{{pic.description}}"
          />
          <div>
            <h3 class="flavor-text">{{pic.title}}</h3>
            <p class="image-text flavor-text">{{pic.description}}</p>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>